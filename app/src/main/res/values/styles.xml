<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonStyleOnMainDisplay" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginHorizontal">@dimen/indent_from_edge</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/standart_textsize</item>
        <item name="cornerRadius">@dimen/cornerRadiusButtons</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
        <item name="iconPadding">@dimen/indent_icon_to_text</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="SettingsDisplayTextes">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/indent_from_edge</item>
        <item name="android:layout_marginVertical">@dimen/indent_from_edges_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/little_textsize</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>
    <style name="SettingsDisplayImages">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginTop">19dp</item>
        <item name="android:layout_marginBottom">18dp</item>
    </style>
    <style name="FrameLayoutSettingsDisplay">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">61dp</item>
    </style>
</resources>